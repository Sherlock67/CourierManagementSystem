@model CourierSystemDataLayer.Model.Order

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prescription</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body style="background-color:aliceblue">
    @* <partial name="_notification" />*@
    <partial name="_orderlist" />
    <div class="container">
        @using (Html.BeginForm("GetOrderDetailsByConsignmentNumber", "OrderPlace", FormMethod.Get))
        {
            <div class="form-row">
                <input type="text" asp-for="ConsignmentNumber" class="form-control" placeholder="Write your Consignment Number">

            </div>


           

            <button type="submit" class="mt-2 w-100 green btn btn-success"> <i class="fa-solid fa-prescription"></i>Track Order</button>
            <a class="mt-2 w-100 green btn btn-success" asp-controller="" asp-action="" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> &nbsp See All Prescription
            </a>
        }
    
        </div>
    
    </div>

</body>
</html>