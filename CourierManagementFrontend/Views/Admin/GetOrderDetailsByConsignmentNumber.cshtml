@model CourierSystemDataLayer.Model.Order

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prescription</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style>
        dl {
            width: 300px;
            height: 150px;
            display: table;
            border: 3px solid green;
            padding: 3px;
        }

        dt, dd {
            display: table-cell;
            color: red;
            font-size: 1.2em;
            border: 1px solid grey;
            margin: 3px;
            padding: 3px;
        }
    </style>

</head>

<body style="background-color:aliceblue">
    <partial name="_orderlist" />
    <div class="container">
        <table class="table table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col"> @Html.DisplayNameFor(model => model.ProductName)</th>
                    <th scope="col">  @Html.DisplayNameFor(model => model.OrderPlacingDate)</th>
                    <th scope="col"> @Html.DisplayNameFor(model => model.FinalDateToReachDestination)</th>
                    <th scope="col"> @Html.DisplayNameFor(model => model.ConsignmentNumber)</th>
                    <th scope="col"> @Html.DisplayNameFor(model => model.OrderStatus)</th>
                    <th scope="col"> @Html.DisplayNameFor(model => model.CurrentPlace)</th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>@Model.ProductName</td>
                    <td>@Model.OrderPlacingDate</td>
                    <td>@Model.FinalDateToReachDestination</td>
                    <td>@Model.ConsignmentNumber</td>
                    <td>
                        @if (@Model.OrderStatus == false)
                        {
                            <p>Pending</p>
                        }
                        else
                        {
                            <p>Dispatched</p>
                        }
                    </td>
                    <td>@Model.CurrentPlace</td>
                    <td>
                        <div class="rounded-pill btn-group">
                            <a asp-controller="Admin" asp-action="UpdateOrder" asp-route-id="@Model.OrderId" class="btn alert-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Admin" asp-action="DeleteUpdate" asp-route-id="@Model.OrderId" class="btn alert-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>


                    </td>
                </tr>

            </tbody>
        </table>





    </div>

</body>
</html>