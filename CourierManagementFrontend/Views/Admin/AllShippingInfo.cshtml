@model IEnumerable<CourierSystemDataLayer.Model.ShipmentInfo>

<h2 class="text-primary">All Prescription List</h2>
@*<partial name="_notification" />*@
<div class="text-end">
    <a asp-controller="Admin" asp-action="CreateNewShipmentInfo" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> &nbsp Create New Shipment Info
    </a>
</div>
