@model CourierSystemDataLayer.Model.Order
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prescription</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body style="background-color:aliceblue">
    <div class="container">
        @using (Html.BeginForm("UpdateOrder", "Admin", FormMethod.Post))
        {
            @Html.HiddenFor(m=>m.OrderId)
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputEmail4">ProductName</label>
                    <input type="text" asp-for="ProductName" class="form-control" placeholder="ShipmentMethod">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputPassword4">FinalDateToReachDestination</label>
                    <input type="datetime" asp-for="FinalDateToReachDestination" class="form-control" placeholder="ShipVia">
                </div>
            </div>
            <div class="form-group">
                <label for="inputAddress">OrderPlacingDate</label>
                <input type="text" asp-for="OrderPlacingDate" class="form-control" placeholder="ShippingTerms">
            </div>
            <div class="form-group">
                <label for="inputAddress2">CurrentPlace</label>
                <input type="text" asp-for="CurrentPlace" class="form-control" placeholder="PaymentStatus">
            </div>
            <div class="form-group">
                <label for="inputAddress2">OrderStatus</label>
                <input type="text" asp-for="OrderStatus" class="form-control" placeholder="PaymentStatus">
            </div>

            <button type="submit" class="mt-2 w-100 green btn btn-success"> <i class="fa-solid fa-prescription"></i>Update Shipment info</button>
            <a class="mt-2 w-100 green btn btn-success" asp-controller="Admin" asp-action="AllShippingInfo" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> &nbsp See All ShipmentInfo
            </a>
        }
    </div>

</body>
</html>