@model CourierSystemDataLayer.Model.Customer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="icon" type="image/png" sizes="32x32" href="./images/favicon-32x32.png">

    <title>CMED Prescription Generator</title>
    <link rel="stylesheet" href="css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <style>
        .attribution {
            font-size: 11px;
            text-align: center;
        }

            .attribution a {
                color: hsl(228, 45%, 44%);
            }
    </style>
</head>
<body style="background-image: url(/images/bg-intro-desktop.png); background-color: slategray;">
    <section>
        <div class="container">
            <div class="row  top-align mt-5 justify-content-center align-items-center">
                <div class="col col-12 col-md-6">
                  
                </div>
                <div class="col col-12 col-md-6">
                    <div class="bg-primary rounded pt-2 pb-2">
                        <p class="text-center fw-bold text-white"><span>Please Register Yourself</span></p>
                    </div>
                    <div class="mt-3 bg-white p-5 rounded">
                        @using (Html.BeginForm())
                        {
                            <div class="input-group mb-2">
                               
                                <input type="text" asp-for="CustomerName" class="form-control " placeholder="CustomerName" aria-label="CustomerName">

                            </div>
                            <div class="input-group  mb-2">

                                <input type="text" asp-for="CustomerEmail" class="form-control " placeholder="CustomerEmail" aria-label="CustomerEmail">


                            </div>
                            <div class="input-group  mb-2">

                                <input type="text" asp-for="CustomerUsername" class="form-control " placeholder="Please Enter Your Username" aria-label="Username">

                            </div>
                       
                            <div class="input-group   mb-2">
                                <input type="password" asp-for="CustomerPassword" class="form-control " placeholder="Please Confirm Your Password" aria-label="Password">


                            </div>
                             <div class="input-group   mb-2">
                                <input type="password" asp-for="ConfirmPassword" class="form-control " placeholder="Please Confirm Your Password" aria-label="Confirm Password">


                            </div>
                            <button type="submit" class="mt-2 w-100 green btn btn-success">Register </button>
                            <a class="mt-2 w-100 green btn btn-success" asp-controller="Customer" asp-action="CustomerLogin" class="btn btn-primary">
                                &nbsp Login Here
                            </a>
                            <p class="para p-2">By clicking the button, you are agreeing to our <span class="terms">Terms and Services</span></p>


                        }



                    </div>
                </div>
            </div>

    </section>


    <footer class="mt-5">
        <p class="attribution">

          
        </p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>